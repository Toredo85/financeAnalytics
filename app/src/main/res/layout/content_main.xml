<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="70dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:autoText="false"
                    android:gravity="bottom"
                    android:text="Текущий остаток:"
                    android:textColor="#009688"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="@dimen/button_text"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/textBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:numeric="decimal"
                    android:text="52062.50"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="bottom"
                    android:paddingLeft="20dp"
                    android:text="Фактические расходы:"
                    android:textColor="#4B4B4B"
                    app:autoSizeMaxTextSize="@dimen/button_text"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/textFactExpreses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="17520.62"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:autoText="true"
                    android:gravity="bottom"
                    android:paddingLeft="20dp"
                    android:text="Плановые расходы"
                    android:textColor="#E91E63"
                    app:autoSizeMaxTextSize="@dimen/button_text"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/textPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="40570.00"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_above="@+id/seekBar1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>